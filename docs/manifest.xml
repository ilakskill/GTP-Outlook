<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1" 
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
           xsi:type="MailApp">

  <Id>fce772c1-e6c1-4ff9-9aca-e7e9f1bc10be</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>SS Addon</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>

  <DisplayName DefaultValue="SS Outlook Add-in" />
  <Description DefaultValue="Displays Smartsheet results in a new window." />

  <IconUrl DefaultValue="https://ilakskill.github.io/GTP-Outlook/assets/icon-64.png" />
  <HighResolutionIconUrl DefaultValue="https://ilakskill.github.io/GTP-Outlook/assets/icon-128.png" />

  <Permissions>ReadWriteItem</Permissions>

  <Hosts>
    <Host Name="Mailbox" />
  </Hosts>

  <AppDomains>
    <AppDomain>https://ilakskill.github.io/GTP-Outlook</AppDomain>
  </AppDomains>

  <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides" Version="1.1">
    <Requirements>
      <bt:Sets DefaultMinVersion="1.3">
        <bt:Set Name="Mailbox" />
      </bt:Sets>
    </Requirements>

    <Hosts>
      <Host xsi:type="MailHost">
        <DesktopFormFactor>
          <FunctionFile>https://ilakskill.github.io/GTP-Outlook/commands.js</FunctionFile>

          <ExtensionPoint xsi:type="MessageReadCommandSurface">
            <OfficeTab id="TabDefault">
              <Group id="msgReadGroup">
                <Label resid="GroupLabel" />
                <Control xsi:type="Button" id="msgReadOpenPaneButton">
                  <Label resid="TaskpaneButton.Label" />
                  <Supertip>
                    <Title resid="TaskpaneButton.Label" />
                    <Description resid="TaskpaneButton.Tooltip" />
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="Icon.16x16" />
                    <bt:Image size="32" resid="Icon.32x32" />
                    <bt:Image size="80" resid="Icon.80x80" />
                  </Icon>
                  <Action xsi:type="ExecuteFunction">
                    <FunctionName>openResultsWindow</FunctionName>
                  </Action>
                </Control>
              </Group>
            </OfficeTab>
          </ExtensionPoint>
        </DesktopFormFactor>
      </Host>
    </Hosts>

    <Resources>
      <bt:Images>
        <bt:Image id="Icon.16x16" DefaultValue="https://ilakskill.github.io/GTP-Outlook/assets/icon-16.png"/>
        <bt:Image id="Icon.32x32" DefaultValue="https://ilakskill.github.io/GTP-Outlook/assets/icon-32.png"/>
        <bt:Image id="Icon.80x80" DefaultValue="https://ilakskill.github.io/GTP-Outlook/assets/icon-80.png"/>
      </bt:Images>
      <bt:ShortStrings>
        <bt:String id="GroupLabel" DefaultValue="SS Add-in"/>
        <bt:String id="TaskpaneButton.Label" DefaultValue="Show Results"/>
      </bt:ShortStrings>
      <bt:LongStrings>
        <bt:String id="TaskpaneButton.Tooltip" DefaultValue="Displays Smartsheet results in a new window."/>
      </bt:LongStrings>
    </Resources>
  </VersionOverrides>
</OfficeApp>
